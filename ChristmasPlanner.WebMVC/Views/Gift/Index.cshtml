        <div class="tableone">
            <h2>Index</h2>
        </div>

        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = " actionlink" })
        </p>
        @if (TempData.ContainsKey("SaveResult"))
        {
            <div class="alert alert-success fade in" role="alert">

                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
                @TempData["SaveResult"]
            </div>
        }

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GiftID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <b>@Html.DisplayNameFor(model => model.BoughtGift)</b>
                </th>
                <th>
                    <b>@Html.DisplayNameFor(model => model.PersonID)</b>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <b>@Html.DisplayFor(modelItem => item.GiftID)</b>
                    </td>
                    <td>
                        <b> @Html.DisplayFor(modelItem => item.Description)</b>
                    </td>
                    <td>
                        <b>@Html.DisplayFor(modelItem => item.BoughtGift)</b>
                    </td>
                    <td>
                        <b>@Html.DisplayFor(modelItem => item.PersonID)</b>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.GiftID }, new { @class = "actionlink" }) <b>|</b>
                         @Html.ActionLink("Details", "Details", new { id = item.GiftID }, new { @class = "actionlink" }) <b>|</b>
                         @Html.ActionLink("Delete", "Delete", new { id = item.GiftID }, new { @class = "actionlink" })
                    </td>
                </tr>
            }

        </table>
