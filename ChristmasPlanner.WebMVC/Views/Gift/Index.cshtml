        }
    }*/
    .jumbotron {
        font-size: xx-large;
        font-weight: bold;
        font-style: italic;
        color: darkred;
    }

    .actionlink {
        font-style: italic;
        font-size: larger;
        font-weight: bold;
        color: darkred;
    }
    .tableone {
        font-weight: bold;
        font-style: italic;
        color: darkgreen;
    }
    .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 20%;
        text-align: center;
        color: darkgreen;
    }
