@model IEnumerable<ChristmasPlanner.Models.CardListItem>

@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    .actionlink {
        font-size: larger;
        font-weight: bold;
        color: darkred;
    }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "actionlink" })
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CardID }, new { @class = "actionlink" }) <b>|</b>
                @Html.ActionLink("Details", "Details", new { id = item.CardID }, new { @class = "actionlink" }) <b>|</b>
                @Html.ActionLink("Delete", "Delete", new { id = item.CardID }, new { @class = "actionlink" })
            </td>
        </tr>
    }

</table>
